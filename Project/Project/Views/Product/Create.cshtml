
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xl-12">
        <div class="breadcrumb-holder">
            <h1 class="main-title float-left">THÊM MỚI LOẠI SẢN PHẨM</h1>
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item">Trang chủ</li>
                <li class="breadcrumb-item active">Người dùng</li>
                <li class="breadcrumb-item active">Danh sách</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">

        <div class="card mb-3">

            <div class="card-header">
                <span class="pull-right">
                    <button class="btn btn-primary btn-sm" onclick="AddProduct()">
                        <i class="fa fa-user-plus" aria-hidden="true"></i> Thêm ngay
                    </button>
                    <button class="btn btn-primary btn-sm" id="btnAddImageProducts">
                        <i class="fa fa-caret-square-o-down bigfonts" aria-hidden="true"></i> Chọn ảnh
                    </button>
                </span>
            </div>
            <!-- end card-header -->
            <!-- <div class="card-bodycard-body"> -->

            <div class="container-fluid mt-3 card-body">
                <form id="FormAdd_Product">
                    <div class="row ">

                        <div class="card col-md-4 pr-1">
                            <div class="card-header card_header">
                                HÌNH ẢNH LOẠI SẢN PHẨM
                            </div>
                            <div class="card-body">
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="row">
                                        <div class="w-100 h-25 pl-2 pr-2" id="ImageAddProduct">
                                            <img src="/Uploads/images/product-04.jpg" style="width: 80%; height: 100%; padding-left:17%" title="Hình ảnh loại sản phẩm" class="AddImageProduct">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">
                                    <input type="hidden" name="image" value="" id="txtAddImageProduct" />
                                    <div class="row mt-3">
                                        <div class="col-md-12">
                                            <input class="form-control" name="AltImage" type="text" placeholder="Mô tả hình ảnh" id="txtAddAltImageProduct" />
                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>


                        <div class="card col-md-4 pr-1">
                            <div class="card-header card_header">
                                THÔNG TIN LOẠI SẢN PHẨM
                            </div>
                            <div class="card-body">
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control" name="Name" type="text" placeholder="Tên loại sản phẩm" id="txtAddProductName" title="Tên của loại sản phẩm" />
                                    </div>
                                </div>
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <select name="ParentID" class="form-control txtSeachGroupProductCategory" id="txtAddProductParentId" title="tên nhóm của loại sản phẩm">
                                            <option value="">Chọn nhóm loại sản phẩm -</option>
                                        </select>
                                    </div>

                                </div>

                                <div class="row col-12">
                                    <div class="col-12 col-xl-6 col-sm-12 col-md-12 col-lg-6  pr-0">
                                        <div class="form-group">

                                            <input class="form-control" name="" value="" type="text" placeholder="Giá bán" id="txtSeachNameUser" title="Ngày tạo ra doanh mục sản phẩm" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-xl-6 col-sm-12 col-md-12 col-lg-6 pr-0">
                                        <div class="form-group">

                                            <input class="form-control" name="" value="" type="text" placeholder="Meta Description" id="txtSeachNameUser" title="Người tạo ra doanh mục sản phẩm" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control" name="DisplayOrder" type="number" placeholder="Thứ tự hiển thị" id="txtAddDisplayOrderProuctCategory" title="Thứ tự hiển thị trong danh sách" />
                                    </div>
                                </div>


                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <select name="ShowOnHome" class="form-control" required id="txtAddShowOnHomeProduct" title="Có cho phép loại sản phẩm có hiển thị lên trang chủ không">
                                            <option value="true">hiển thị lên trang chủ  </option>
                                            <option value="false">không hiển thị lên trang chủ </option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="card col-md-4 pl-1">
                            <div class="card-header card_header">
                                THÔNG TIN SEO LOẠI SẢN PHẨM
                            </div>
                            <div class="card-body">
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control" name="MetaTitle" type="text" placeholder="Meta Title" id="txtAddMetaTitleProduct" />
                                    </div>
                                </div>
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control" name="SeoTitle" type="text" placeholder="Seo Title" id="txtAddSeoTitleProduct" />
                                    </div>
                                </div>
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control" name="MetaKeywords" type="text" placeholder="Meta KeyWord" id="txtAddMetaKeywordsProduct" />
                                    </div>
                                </div>
                                <div class="col-12 col-xl-12 col-sm-12 col-md-12 col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control" name="MetaDescriptions" type="text" placeholder="Meta Description" id="txtAddMetaDescriptionsProduct" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    


                    <div class="row mt-3">
                        <div class="card col-md-12 pr-1">
                            <div class="card-header card_header">
                                BÀI VIẾT GIỚI THIỆU LOẠI SẢN PHẨM
                            </div>
                            <div class="card-body">
                                <input type="hidden" name="Descriptions" id="txtAddDescriptionProduct" />
                                <input id="txtAddDescriptionProductCkeditor" class="ckeditor" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>

        </div>
        <!-- end card-body -->

    </div>
    <!-- end card -->

</div>


@*<div>
        <input id="txtimage " class="form-control pt-4" />

    </div>*@

<script>


    $(document).ready(function () {

        CKEDITOR.replace("txtAddDescriptionProductCkeditor", { height: 1000, });
        $('#btnAddImageProducts').click(function () {
            var fider = new CKFinder();
            fider.selectActionFunction = function (fileUrl) {
                $(".AddImageProduct ").remove();
                $("#ImageAddProduct").append("<img src='" + fileUrl + "' style='width: 100%; height: 100%; ' class='AddImageProduct' title='Hình ảnh loại sản phẩm'/>")
                $('#txtAddImageProduct').val(fileUrl);
            }
            fider.popup();
        })
    });
</script>

	